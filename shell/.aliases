alias la='ls -al'
alias be='bundle exec'
alias g=git
alias gs='git status'
alias gg='git grep'
alias vim=nvim
alias vi=nvim
alias dcp='docker compose'

# Ensure non-standard $TERM isn't forwarded to remote hosts
function ssh() {
  if [[ "$TERM" == *tmux* || "$TERM" == *kitty* ]]; then
    TERM=xterm-256color command ssh "$@"
  else
    command ssh "$@"
  fi
}
